server {
    listen       80;
    server_name  128.199.255.103;
    root       /home/ohmpieng/;
    access_log  /home/ohmpieng/logs/default.access.log  combined;
    location / {
        location ~ \.php$ {
            try_files      $uri = 404;
            fastcgi_pass   127.0.0.1:9000;
            fastcgi_index  index.php;
            fastcgi_param  SCRIPT_FILENAME $document_root$fastcgi_script_name;
            include        fastcgi_params;
        }
        #autoindex on;
    }
    error_page  404     /404.html;
    error_page  403     /403.html;
}

server {
    server_name "~^(?!www\.).*" ;
    return 301 $scheme://blog.nonmadden.com$request_uri;
}

server {
  server_name ~^(.*)\.nonmadden\.com$ ;
  rewrite ^ http://blog.nonmadden.com/ redirect;
}

