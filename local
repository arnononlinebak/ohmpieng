server {
    listen 8080;
    server_name apps.ohmpieng.local;
    root /Users/non/ohmpieng/www/applications/;
    client_max_body_size 100M;
    access_log /Users/non/ohmpieng/logs/apps.ohmpieng.org.access.log main;

    location / {
        include conf.d/php-fpm;
        autoindex on;
    }
}

